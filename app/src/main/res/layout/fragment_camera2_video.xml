<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.videonasocialmedia.videona.record.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="120dp"

        android:layout_height="450dp"

        android:layout_alignParentEnd="true"

        android:layout_alignParentStart="false">

        <FrameLayout
            android:layout_width="120dp"

            android:layout_height="450dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:orientation="horizontal">

        </FrameLayout>

        <ImageButton

            android:id="@+id/button_capture"

            android:layout_width="100dp"

            android:layout_height="100dp"

            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"

            android:layout_gravity="center_horizontal|end"

            android:background="@null"

            android:paddingEnd="16dp"

            android:scaleType="fitCenter"

            android:src="@drawable/ic_rec_buttom"/>

        <ImageButton

            android:id="@+id/btnColorEffect"

            android:layout_width="25dp"

            android:layout_height="25dp"

            android:layout_above="@+id/button_capture"

            android:layout_centerHorizontal="true"

            android:layout_margin="16dp"

            android:background="@null"

            android:focusableInTouchMode="false"

            android:scaleType="fitCenter"

            android:src="@drawable/ic_filters" />

        <Chronometer

            android:id="@+id/chronometerVideo"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignWithParentIfMissing="false"

            android:layout_below="@+id/button_capture"

            android:layout_centerHorizontal="true"

            android:layout_gravity="center_vertical"

            android:layout_marginEnd="16dp"

            android:paddingLeft="16dp"

            android:paddingRight="16dp"

            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/relativeLayoutColorEffects"

        android:layout_width="400dp"

        android:layout_height="100dp"

        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">


        <org.lucasr.twowayview.TwoWayView

            xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:tools="http://schemas.android.com/tools"

            android:id="@+id/lvItems"

            style="@style/TwoWayView"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"

            android:layout_centerInParent="true"

            android:drawSelectorOnTop="false"

            tools:context=".RecordActivity" />

    </RelativeLayout>

</RelativeLayout>
