<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/edit_fragment_scissors_button_razor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pastel_palette_green"
        android:padding="15dp"
        android:src="@drawable/edit_fragment_scissors_icon_razor_normal"
        android:adjustViewBounds="false"
        android:alpha="0.10" />

    <ImageButton
        android:id="@+id/edit_fragment_scissors_button_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pastel_palette_purple"
        android:padding="15dp"
        android:src="@drawable/edit_fragment_scissors_icon_crop_normal" />

    <ImageButton
        android:id="@+id/edit_fragment_scissors_button_add_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pastel_palette_pink_2"
        android:padding="15dp"
        android:src="@drawable/edit_fragment_scissors_icon_add_clip_normal"
        android:alpha="0.10" />

    <ImageButton
        android:id="@+id/edit_fragment_scissors_button_duplicate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pastel_palette_red"
        android:padding="15dp"
        android:src="@drawable/edit_fragment_scissors_icon_duplicate_normal"
        android:alpha="0.10" />
</LinearLayout>