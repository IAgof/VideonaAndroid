<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/VideonaTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/VideonaTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.videonasocialmedia.videona.presentation.views.customviews.AspectRatioVideoView
            android:id="@+id/video_duplicate_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:aspect="sixteen_nine"/>

        <ImageButton
            android:id="@+id/button_duplicate_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:src="@drawable/common_icon_play" />

        <SeekBar
            android:id="@+id/seekbar_duplicate_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/video_duplicate_preview"
            android:progressDrawable="@color/colorAccent"
            android:maxHeight="1dp"
            android:thumb="@drawable/activity_edit_common_icon_seekbar_advance"
            android:layout_marginBottom="12dp"/>

        <ImageButton
            android:id="@+id/button_duplicate_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_icon_expand"
            android:layout_alignTop="@+id/video_duplicate_preview"
            android:layout_alignRight="@+id/video_duplicate_preview"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:scaleType="fitCenter"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_layout_duplicate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_thumb_duplicate_video_left"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:src="@drawable/gatito_rules"/>
            <TextView
                android:id="@+id/textView_duplicate_num_increment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="x2"
                android:textColor="@color/colorAccent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="24sp"/>
            <ImageView
                android:id="@+id/image_thumb_duplicate_video_right"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:src="@drawable/gatito_rules"/>

        </LinearLayout>


        <ImageButton
            android:id="@+id/button_duplicate_increment_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@null"
            android:src="@drawable/activity_edit_clip_duplicate_increment"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linear_layout_duplicate"/>

        <ImageButton
            android:id="@+id/button_duplicate_decrement_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@null"
            android:src="@drawable/activity_edit_clip_duplicate_decrement"
            android:layout_toLeftOf="@+id/button_duplicate_increment_video"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linear_layout_duplicate"
            />

        <TextView
            android:id="@+id/duplicate_text_info_duplicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/text_edit_info_duplicate"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:visibility="visible"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentBottom="false"
            android:layout_marginBottom="16dp"
            android:layout_above="@+id/linear_layout_duplicate"
            android:layout_centerHorizontal="true"
            />


        <ImageButton
            android:id="@+id/button_duplicate_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/activity_edit_common_icon_cancel"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"/>

        <ImageButton
            android:id="@+id/button_duplicate_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/activity_edit_common_icon_accept"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"/>

    </RelativeLayout>



</LinearLayout>